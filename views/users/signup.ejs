<% layout("/layouts/boilerplate.ejs") -%>

 <body>
   <h1 class="col-6 offset-3"> Signup On Wanderlust</h1>
     <div class="row mt-3"> 
       <div class="col-6 offset-3">
         <form action="/signup" method="POST" class="needs-validation" novalidate>
           <div class="mb-3">
             <label for="username" class="form-label">username</label> 
             <input name="username" id="username" class="form-control"required type="text" />
             <div class="valid-feedback">Good choice!!</div>
           </div>
           <div class="mb-3">
              <label for="email" class="form-label">email</label> 
              <input name="email" id="email" class="form-control"required type="email" />
            </div>
           <div class="mb-3">
             <label for="password" class="form-label">password</label> 
             <input name="password" id="password" class="form-control"required type="password" />
           </div>
           <button class="btn btn-success">SignUp</button>
         </form>
       </div>
     </div>
 </body>